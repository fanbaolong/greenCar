<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="layout_match_all">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    
    <style name="layout_wrap_all">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="layout_match_wrap" parent="@style/layout_match_all">
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <!-- 大布局背景通用总样式 -->
    <style name="layoutbg" parent="@style/layout_match_all">
        <item name="android:background">@color/base_bg_gray</item>
    </style>
    
    <!-- 导航头部背景样式 -->
    <style name="layoutHead" parent="@style/layout_match_all">
        <item name="android:layout_height">45dip</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>
    
    <style name="MyDialog_pro" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@android:color/transparent</item>
    </style>
    
    <style name="ResourcesFirstLoadingProgress" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/resource_progress_firstmedium</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:maxHeight">40dp</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:maxWidth">40dp</item>
    </style>
    
    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/line</item>
    </style>
    
    <!-- Dialog样式 -->
    <style name="Theme_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="textview" parent="@style/layout_wrap_all">
        <item name="android:textSize">@dimen/ts_13</item>
        <item name="android:textColor">@color/title_light_gray</item>
    </style>

</resources>
